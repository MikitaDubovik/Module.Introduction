@using Module.Introduction.Helpers;
@model IEnumerable<Module.Introduction.Models.Categories>

@{
    ViewData["Title"] = "Index";
    var i = 1;
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @if (i % 2 == 0)
                    {
                        <a asp-action="GetImage" asp-route-id="@item.CategoryId">Id of image - @item.CategoryId</a>
                    }
                    else
                    {
                        @Html.NorthwindImageLink(item.CategoryId.ToString())
                    }

                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.CategoryId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a> |
                    <a asp-action="GetImage" asp-route-id="@item.CategoryId">Get Image</a>
                </td>
            </tr>
            i++;
        }
    </tbody>
</table>
